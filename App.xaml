<Application x:Class="insta_cutter.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
        <SolidColorBrush x:Key="AppBackground" Color="White"/>
        <SolidColorBrush x:Key="AppForeground" Color="Black"/>
        <SolidColorBrush x:Key="MenuBackground" Color="White"/>
        <SolidColorBrush x:Key="MenuForeground" Color="Black"/>
        <SolidColorBrush x:Key="MenuSelectedBackground" Color="#E6E6E6"/>
        <SolidColorBrush x:Key="ToolBarBackground" Color="#F0F0F0"/>
        <SolidColorBrush x:Key="ToolBarForeground" Color="Black"/>
        <SolidColorBrush x:Key="ToolBarButtonBackground" Color="Transparent"/>
        <SolidColorBrush x:Key="ToolBarButtonHover" Color="#DCDCDC"/>
        <!-- Load (open folder) icon: 24x24 viewport -->
        <Geometry x:Key="LoadIcon">M 10,4 H 4 C 2.9,4 2,4.9 2,6 L 2,18 C 2,19.1 2.9,20 4,20 H 20 C 21.1,20 22,19.1 22,18 V 8 C 22,6.9 21.1,6 20,6 H 12 Z</Geometry>
        <!-- Save (floppy disk) icon: 24x24 viewport -->
        <Geometry x:Key="SaveIcon">M 5,3 H 17 L 21,7 V 19 C 21,20.1 20.1,21 19,21 H 5 C 3.9,21 3,20.1 3,19 V 5 C 3,3.9 3.9,3 5,3 Z M 7,3 V 9 H 17 V 3 Z M 7,13 H 17 V 21 H 7 Z</Geometry>
    </Application.Resources>
</Application>
